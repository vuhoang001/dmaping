<Invoice>
    <InvoiceNo>{{ Invoice.InvoiceNo }}</InvoiceNo>
    <InvoiceDate>{{ Invoice.InvoiceDate }}</InvoiceDate>
    <BuyerName>{{ Invoice.BuyerName }}</BuyerName>
    <BuyerTaxCode>{{ Invoice.BuyerTaxCode }}</BuyerTaxCode>
    <TotalAmount>{{ Invoice.TotalAmount }}</TotalAmount>

    <Products>
        {{ for p in Products }}
        <Product>
            <ProductName>{{ p.ProductName }}</ProductName>
            <Quantity>{{ p.Quantity }}</Quantity>
            <UnitPrice>{{ p.UnitPrice }}</UnitPrice>
        </Product>
        {{ end }}
    </Products>
</Invoice>
