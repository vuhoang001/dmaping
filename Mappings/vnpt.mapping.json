{
  "Invoice": {
    "InvoiceNo": "{{ Data.InvoiceNo }}",
    "InvoiceDate": "{{ Data.InvoiceDate }}",
    "BuyerName": "{{ Data.Buyer.Name }}",
    "BuyerTaxCode": "{{ Data.Buyer.TaxCode }}",
    "TotalAmount": "{{ sum(Data.Items, 'Qty * Price') }}"
  },

  "Products": [
    {
      "$source": "Data.Items",
      "ProductName": "{{ Name }}",
      "Quantity": "{{ Qty }}",
      "UnitPrice": "{{ Price }}"
    }
  ]
}
